    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Multi Config (Windows)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/run_multi_config.py",
            "args": [
                "--config-path",
                "${input:pick_config_file_windows}",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Alter Requirements",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/alter_requirements.py",
            "args": [
                "--requirements-file",
                "../nag/requirements.txt",
                "--no-version-constraint",
                "--no-python-constraint"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Convert Masks",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tools/scripts/convert_masks.py",
            "args": [
                "--ov-masks-directory",
                "../nag/data/datasets/waymo/segment-9758342966297863572/masks_anylabeling_complete",
                "--output-directory",
                "../nag/data/datasets/waymo/segment-9758342966297863572/individual_object_masks"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Convert Masks",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tools/scripts/convert_masks.py",
            "args": [
                "--ov-masks-directory",
                "../nag/data/datasets/waymo/segment-9758342966297863572/masks_anylabeling_complete",
                "--output-directory",
                "../nag/data/datasets/waymo/segment-9758342966297863572/individual_object_masks"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Version Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tools/scripts/version.py",
            "args": [
                ".git/COMMIT_EDITMSG",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Tag Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tools/scripts/tag.py",
            "args": [
                "920e5279867d0c4b5664a0329da29d0ff9792774",
                "--commit-message-path",
                ".git/COMMIT_EDITMSG",
            ],
            "console": "integratedTerminal"
        },
    ],
    "inputs": [
        {
            "id": "pick_config_file_windows",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "dir /A-D /S /B",
                "cwd": "${workspaceFolder}/config"
            }
        },
        {
            "id": "pick_config_file_linux",
            "type": "command",
            // type specific configuration attributes
            "command": "shellCommand.execute",
            "args": {
                "command": "find ./config -type f",
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}