    "version": "0.2.0",
    "configurations": [

    ],
    "inputs": [
        {
            "id": "pick_config_file_windows",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "dir /A-D /S /B",
                "cwd": "${workspaceFolder}/config"
            }
        },
        {
            "id": "pick_config_file_linux",
            "type": "command",
            // type specific configuration attributes
            "command": "shellCommand.execute",
            "args": {
                "command": "find ./config -type f",
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}